<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_centerHorizontal="true"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="5dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum doler"
                android:textColor="@color/black"
                android:textSize="@dimen/text_announcement_title"
            />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
            />

            <TextView
                android:id="@+id/info_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="1/15/16"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_announcement_date"/>

        </LinearLayout>

        <TextView
            android:id="@+id/info_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/garbage_fill_medium"
            android:textColor="@color/black"
            android:textSize="@dimen/text_announcement_description"/>

    </LinearLayout>

</android.support.v7.widget.CardView><!-- From: file:/C:/Users/Omkar%20Moghe/Desktop/MHacks-Android/app/src/main/res/layout/announcement_list_item.xml -->