<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:id="@+id/card_view" android:layout_marginTop="3dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:background="@color/white"
    app:cardCornerRadius="2dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout android:layout_width="10dp"
                android:id="@+id/announcement_color"
                android:layout_height="match_parent"
                android:background="@color/event_blue"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView android:layout_width="wrap_content" android:layout_height="25dp"
                        android:id="@+id/info_title"
                        android:layout_margin="5dp"
                        android:layout_gravity="start|left"
                        android:textColor="@color/black"
                        android:text="Event Title"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="25dp"
                        android:id="@+id/info_date"
                        android:layout_margin="5dp"
                        android:layout_gravity="end|right"
                        android:text="3/2/1996"
                        android:textColor="@color/md_grey_600"/>

                </FrameLayout>

                <TextView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/info_description"
                    android:layout_margin="5dp"
                    android:textColor="@color/md_grey_600"
                    android:text="Event info goes here..." />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>